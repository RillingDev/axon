{
    "name": "axonjs",
    "version": "1.3.0",
    "description": "A super tiny vue-like framework",
    "main": "dist/axon.common.js",
    "module": "dist/axon.esm.js",
    "constants": {
        "dirBase": {
            "input": "./src",
            "output": "./dist"
        },
        "js": {
            "input": "main",
            "namespace": {
                "module": "Axon",
                "file": "axon"
            }
        }
    },
    "scripts": {
        "start": "npm-run-all lint build test",
        "build": "node tasks/jsDev.js",
        "dist": "node tasks/jsDist.js",
        "lint": "eslint src/",
        "test": "jasmine"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FelixRilling/axonjs.git"
    },
    "keywords": [
        "framework",
        "directives",
        "vue-like"
    ],
    "author": "Felix Rilling",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/FelixRilling/axonjs/issues"
    },
    "homepage": "https://github.com/FelixRilling/axonjs#readme",
    "devDependencies": {
        "babel-core": "^7.0.0-alpha.19",
        "babel-preset-env": "^1.6.0",
        "eslint": "^4.5.0",
        "eslint-plugin-unicorn": "^2.1.2",
        "jasmine": "^2.8.0",
        "npm-run-all": "^4.1.0",
        "rollup": "^0.48.2",
        "rollup-plugin-node-resolve": "^3.0.0",
        "uglify-es": "^3.0.28"
    },
    "dependencies": {
        "lightdash": "^2.0.1",
        "pseudo-eval": "^4.1.0"
    }
}
